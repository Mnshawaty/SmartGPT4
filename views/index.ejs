<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="ChatGPT Interface">
    <title>ChatGPT Interface</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        /* Add some custom CSS for improvements */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 30px;
        }

        .output-container {
            margin-top: 20px;
            background-color: #fff;
            border: 1px solid #ddd;
            padding: 10px;
            height: 280px;
            overflow-y: auto;
        }


        .form-group {
            margin-bottom: 20px;
            margin-right: 31px;
            
        }

        .form-control {
            padding: 10px;
            padding-right: 20px;
            width: 100%;
        }

        .btn {
            color: #fff;
            background-color: #007bff;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            width: 100%;
        }

        .btn:hover {
            background-color: #0056b3;
        }
    </style>
</head>

<body>
    <main class="container">
        <h1>SmartGPT</h1>
        <form action="/run" method="POST">
            <fieldset>
                <legend>ChatGPT Parameters</legend>
                <div class="form-group">
                    <label for="prompt">Prompt:</label>
                    <input type="text" class="form-control" id="prompt" name="prompt" required
                        aria-describedby="promptHelp">
                    <small id="promptHelp" class="form-text text-muted">Please enter a prompt. For example, 'Make a
                        presentation on the solar system.'</small>
                </div>
                <div class="form-group">
                    <label for="numAsks">Number of Questions Allowed:</label>
                    <input type="number" class="form-control" id="numAsks" name="numAsks" required
                        aria-describedby="numAsksHelp">
                    <small id="numAsksHelp" class="form-text text-muted">Please enter the number of questions you want
                        to ask.</small>
                </div>
                <div class="form-group">
                    <label for="apiKey">OpenAI API Key:</label>
                    <input type="password" class="form-control" id="apiKey" name="apiKey" required
                        aria-describedby="apiKeyHelp">
                    <small id="apiKeyHelp" class="form-text text-muted">Please enter your OpenAI API Key.</small>
                </div>
                <div class="form-group">
                    <label>GPT Version:</label>
                    <div>
                        <input type="radio" id="gpt4" name="gptVersion" value="gpt-4" checked>
                        <label for="gpt4">GPT-4</label>
                    </div>
                    <div>
                        <input type="radio" id="gpt3" name="gptVersion" value="gpt-3.5-turbo">
                        <label for="gpt3">GPT-3.5-turbo</label>
                    </div>
                </div>
            </fieldset>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <!-- Output and logs container -->
        <!-- Output and logs container -->
        <section class="output-container" id="output">
            <h2>Output and Logs</h2>
            <!-- Output will be appended here by script.js -->
            <textarea id="outputText" style="width: 100%; height: 200px;" readonly></textarea>
        </section>

    </main>
    <!-- index.ejs -->

    <!-- ... -->

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('form').on('submit', function (event) {
                event.preventDefault();
    
                $.ajax({
                    type: 'POST',
                    url: '/run',
                    data: $(this).serialize(),
                    success: function (response) {
                        $('#outputText').val(response.gptOutput);
                    },
                    error: function (error) {
                        console.log(error);
                    }
                });
            });
        });
    </script>

</body>

</html>